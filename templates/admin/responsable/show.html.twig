{% extends 'base.html.twig' %}
{% block title %}
    Responsables
{% endblock %}
{% block bread_cumb %}
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Responsables</li>
                </ol>
            </nav>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            {% for resp in responsables %}
                <div class="col-md-3">
                    <div class="card" style="width: 12rem;">
                        <img src="{{ asset('build/images/user.jpg') }}" alt="" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ resp.nom|upper~' '~resp.prenom|capitalize }}</h5>
                            <div class="card-text">
                                <a href="#" class="btn btn-outline-primary">Profile</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

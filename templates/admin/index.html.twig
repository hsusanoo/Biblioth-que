{% extends 'base.html.twig' %}
{% block title %}
    Tableau de bord
{% endblock %}
{% block bread_cumb %}
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Tableau de bord</li>
                </ol>
            </nav>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h4 class="card-title mb-0">
                                    <span class="mode">
                                    </span>
                                </h4>
                                <div class="small text-muted chart-year"></div>
                            </div>
                            <div class="col-lg-1 col-md-2 col-sm-3 col-4">
                                <div class="form-group">
                                    <input id="year" type="text" class="js-year-picker form-control" value="2019">
                                </div>
                            </div>
                            <div class="col d-none d-md-block">
                                <button class="btn btn-primary float-right" type="button">
                                    <i class="cui-cloud-download"></i>
                                </button>
                                <div class="btn-group btn-group-toggle float-right mr-3" data-toggle="buttons">
                                    <label class="btn btn-outline-secondary active">
                                        <input id="option1" type="radio" name="options" autocomplete="off" checked
                                               value="Livres">
                                        Livres
                                    </label>
                                    <label class="btn btn-outline-secondary">
                                        <input id="option2" type="radio" name="options" autocomplete="off"
                                               value="Exemplaires"> Exemplaires
                                    </label>
                                </div>
                            </div>

                        </div>

                        <div class="chart-wrapper" style="height:300px;margin-top:40px;">
                            <div class="chartjs-size-monitor"
                                 style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;">
                                <div class="chartjs-size-monitor-expand"
                                     style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
                                    <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
                                </div>
                                <div class="chartjs-size-monitor-shrink"
                                     style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
                                    <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
                                </div>
                            </div>
                            <canvas class="chart chartjs-render-monitor" id="main-chart" height="269" width="897"
                                    style="display: block; height: 300px; width: 997px;"></canvas>
                            <div id="main-chart-tooltip" class="chartjs-tooltip center"
                                 style="opacity: 0; left: 939.021px; top: 276.176px;">
                                <div class="tooltip-header">
                                    <div class="tooltip-header-item">F</div>
                                </div>
                                <div class="tooltip-body">
                                    <div class="tooltip-body-item"><span class="tooltip-body-item-color"
                                                                         style="background-color: rgb(255, 255, 255);"></span><span
                                                class="tooltip-body-item-label">My First dataset</span><span
                                                class="tooltip-body-item-value">64</span></div>
                                    <div class="tooltip-body-item"><span class="tooltip-body-item-color"
                                                                         style="background-color: rgb(255, 255, 255);"></span><span
                                                class="tooltip-body-item-label">My Second dataset</span><span
                                                class="tooltip-body-item-value">91</span></div>
                                    <div class="tooltip-body-item"><span class="tooltip-body-item-color"
                                                                         style="background-color: rgb(255, 255, 255);"></span><span
                                                class="tooltip-body-item-label">My Third dataset</span><span
                                                class="tooltip-body-item-value">65</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div id="categories" class="row text-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}
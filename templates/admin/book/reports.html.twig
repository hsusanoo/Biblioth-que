{% extends 'base.html.twig' %}
{% block title %}
    Acquisitions
{% endblock %}
{% block bread_cumb %}
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcumb-item" aria-current="page">Rapports</li>
                    <li class="breadcrumb-item active" aria-current="page">Acquisitions</li>
                </ol>
            </nav>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="card text-center">
            <div class="card-header">
                <h4 class="card-title">Acquisitions documentaires</h4>
                <hr>
                <ul class="nav nav-pills nav-justified mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-month-tab" data-toggle="pill" href="#pills-month"
                           role="tab"
                           aria-controls="pills-month" aria-selected="true">Par Mois</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-year-tab" data-toggle="pill" href="#pills-year" role="tab"
                           aria-controls="pills-year" aria-selected="false">Par Année</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-month" role="tabpanel"
                         aria-labelledby="pills-month-tab">
                        <div class="row justify-content-center mt-5 mb-5">
                            <div class="col-md-4">
                                <form action="" method="get">
                                    <div class="form-group row">
                                        <div class="col">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="calendar">
                                                        <i class="far fa-calendar-alt"></i>
                                                    </span>
                                                </div>
                                                <input type="text" class="js-month-picker form-control" name="date"
                                                       aria-describedby="calendar">
                                                <div class="input-group-append">
                                                    <a tabindex="0" class="btn btn-outline-secondary" role="button"
                                                       data-toggle="popover" data-trigger="focus"
                                                       data-content="Laissez ce champ vide pour générer toutes les dates possibles">
                                                        <i class="fas fa-question-circle"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="submit" name="submit" value="Exporter" class="btn btn-outline-primary">
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-year" role="tabpanel" aria-labelledby="pills-year-tab">
                        <div class="row justify-content-center mt-5 mb-5">
                            <div class="col-md-4">
                                <form action="" method="get">
                                    <div class="form-group row">
                                        <div class="col">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="calendar">
                                                        <i class="far fa-calendar-alt"></i>
                                                    </span>
                                                </div>
                                                <input type="text" class="js-year-picker form-control" name="date"
                                                       aria-describedby="calendar">
                                                <div class="input-group-append">
                                                    <a tabindex="0" class="btn btn-outline-secondary" role="button"
                                                       data-toggle="popover" data-trigger="focus"
                                                       data-content="Laissez ce champ vide pour générer toutes les dates possibles">
                                                        <i class="fas fa-question-circle"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="submit" name="submit" value="Exporter" class="btn btn-outline-primary">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
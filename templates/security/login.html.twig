{% extends 'login_base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-10 col-sm-10 col-md-8 col-lg-5">
            <div class="card p-4">
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <h1>Authentification</h1>
                        <p class="text-muted">Connectez-vous à votre compte</p>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon cui-user"></i>
                                </span>
                            </div>
                            <input class="form-control" value="{{ last_username }}" type="text" placeholder="E-mail"
                                   name="email" required autofocus>
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="icon cui-lock-locked"></i>
                                </span>
                            </div>
                            <input class="form-control" type="password" placeholder="Password" name="password"
                                   required>
                        </div>
                        <div class="row">
                            <div class="col mb-3">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="remember_me"
                                           name="_remember_me" checked/>&nbsp;
                                    <label for="remember_me" class="custom-control-label">Se souvenir de moi</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <button class="btn btn-primary px-4" type="submit">Connexion</button>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="col-6 text-right">
                                <button class="btn btn-link px-0" type="button">Mot de passe oublié ?</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

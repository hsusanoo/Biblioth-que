{% extends 'base.html.twig' %}
{% block title %}
    Tableau de bord
{% endblock %}
{% block bread_cumb %}
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Tableau de bord</li>
                </ol>
            </nav>
        </div>
    </div>
{% endblock %}
{% block body %}

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h3 class="card-title mb-0">
                                    Acquisitions
                            </h3>
                            <div class="small text-muted chart-year"></div>
                        </div>
                        <div class="col-lg-1 col-md-2 col-sm-3 col-4">
                            <div class="form-group">
                                <input id="year" type="text" class="js-year-picker form-control" value="2019">
                            </div>
                        </div>
                        <div class="col d-none d-md-block">
                            <button class="btn btn-primary float-right" type="button">
                                <i class="cui-cloud-download"></i>
                            </button>
                        </div>

                    </div>

                    <div class="chart-wrapper" style="position: relative;height:350px;margin-top:40px;width: 100%">
                        <canvas class="chart" id="main-chart"></canvas>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="card card-body">
                        <div class="row mb-1">
                            <div class="col"><h3>Domaines</h3></div>
                            <div class="col text-center">
                                <h4 title="QuantitÃ© totale">
                                    <span class="badge badge-primary total"></span>
                                    <span class="mode"></span>
                                </h4>
                            </div>
                            <div class="col d-none d-md-block pr-0">
                                <div class="btn-group btn-group-toggle float-right mr-3" data-toggle="buttons">
                                    <label class="btn btn-outline-secondary active">
                                        <input id="option1" type="radio" name="options" autocomplete="off" checked
                                               value="Livres">
                                        Livres
                                    </label>
                                    <label class="btn btn-outline-secondary">
                                        <input id="option2" type="radio" name="options" autocomplete="off"
                                               value="Exemplaires"> Exemplaires
                                    </label>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div id="categories" class="row text-center mt-1">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}
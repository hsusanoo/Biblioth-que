{% extends 'search_base.html.twig' %}

{% block title %}Recherche{% endblock %}
{% block stylesheets %}
    <style>
        body {
            background: #eee;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="container flex-row align-items-center">
        <div class="row mb-5 mt-5">
            <div class="col mb-5">
                <div class="row mb-5">
                    <div class="col d-flex justify-content-center">
                        <img src="{{ asset('build/loupe.png') }}"
                             alt="Search image" width="250px" height="250px" style="border-radius: 20%;margin-right: 30px">
                    </div>
                </div>
                <div class="row d-flex justify-content-center mb-3">
                    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 col-12 mb-3">
                        <form action="{{ path('search_results') }}" method="get">
                            {% include 'search/_search_bar.html.twig' %}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}
